<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3D5AFE"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="48dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.udacity.rahul.myappportfolio.MainActivity"
        tools:showIn="@layout/activity_main">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:text="My NanoDegree Apps!"
            android:textColor="#E3F2FD"
            android:textSize="24sp"
            android:textStyle="normal|bold|italic" />

        <Button
            android:id="@+id/spotify_steamer"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="#D81B60"
            android:fontFamily="sans-serif-medium"
            android:onClick="Spotify_Steamer"
            android:text="@string/spotify_steamer"
            android:textColor="#E3F2FD"
            android:textStyle="normal|bold|italic" />

        <Button
            android:id="@+id/scores_app"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="#D81B60"
            android:fontFamily="sans-serif-medium"
            android:onClick="Scores_App"
            android:text="@string/scores_app"
            android:textColor="#E3F2FD"
            android:textStyle="normal|bold|italic" />

        <Button
            android:id="@+id/library_app"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="#D81B60"
            android:fontFamily="sans-serif-medium"
            android:onClick="Library_App"
            android:text="@string/library_app"
            android:textColor="#E3F2FD"
            android:textStyle="normal|bold|italic" />

        <Button
            android:id="@+id/build_it_bigger"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="#D81B60"
            android:fontFamily="sans-serif-medium"
            android:onClick="Build_It_Bigger"
            android:text="@string/build_it_bigger"
            android:textColor="#E3F2FD"
            android:textStyle="normal|bold|italic" />

        <Button
            android:id="@+id/xyz_reader"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="#D81B60"
            android:fontFamily="sans-serif-medium"
            android:onClick="XYZ_Reader"
            android:text="@string/xyz_reader"
            android:textColor="#E3F2FD"
            android:textStyle="normal|bold|italic" />

        <Button
            android:id="@+id/button"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="#D81B60"
            android:fontFamily="sans-serif-medium"
            android:onClick="Capstone"
            android:text="@string/capstone"
            android:textColor="#E3F2FD"
            android:textStyle="normal|bold|italic" />

    </LinearLayout>

</ScrollView>
